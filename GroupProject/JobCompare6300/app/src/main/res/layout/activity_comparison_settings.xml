<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ComparisonSettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="118dp">

        <TextView
            android:id="@+id/textViewAppHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/job_offer_comparison"
            android:textColor="#009688"
            android:textSize="36sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/divider"
            android:layout_width="322dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginStart="190dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="190dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/screenTitleText"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="Comparison Settings"
            android:textSize="24sp" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Restricted Stock Award"
                        android:textAlignment="inherit"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/restricted_stock_award_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="270dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text="Retirement Match"
                        android:textAlignment="inherit"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/retirement_match_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="270dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text="Relocation Stipend"
                        android:textAlignment="inherit"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/relocation_stipend_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="270dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:elegantTextHeight="false"
                        android:text="Annual Salary"
                        android:textAlignment="inherit"
                        android:textDirection="firstStrongRtl"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/annual_salary_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:dropDownWidth="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="270dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text="Yearly Bonus"
                        android:textAlignment="inherit"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/yearly_bonus_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/saveButton"
                        android:layout_width="46dp"
                        android:layout_height="match_parent"
                        android:layout_margin="15dp"
                        android:layout_weight="1"
                        android:text="Save"
                        app:cornerRadius="15dp" />

                    <Button
                        android:id="@+id/cancelButton"
                        android:layout_width="46dp"
                        android:layout_height="match_parent"
                        android:layout_margin="15dp"
                        android:layout_weight="1"
                        android:text="Cancel"
                        app:cornerRadius="15dp"></Button>


                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>